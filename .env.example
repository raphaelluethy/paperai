# Database connection
DATABASE_URL=postgres://paperai:paperai@localhost:5432/paperai

# Papers directory (where PDFs are stored)
PAPERS_DIR=./papers

# Embedding provider: "ollama" or "openai"
EMBEDDING_PROVIDER=ollama

# Embedding model (provider-specific)
# For Ollama: nomic-embed-text, mxbai-embed-large, etc.
# For OpenAI: text-embedding-3-small, text-embedding-3-large, etc.
EMBEDDING_MODEL=nomic-embed-text

# OpenAI API key (required if using OpenAI provider)
OPENAI_API_KEY=
